@inject WePayOffer.BL.Interface.IGenericRep<WePayOffer.DAL.Entity.Status> status



<style>
    table thead tr th, table tr td {
        text-align: center !important;
    }

    label {
        text-align: center;
    }
</style>

    <section class="section mb-3 mt-5">
        <div class="row">
            <div class="col-xl-1 text-end pt-1">
                <label>Status</label>
            </div>
            <div class="col-xl-3">
                <select class="form-control" id="myList">
                    <option>Select Status</option>
                    @foreach (var item in await status.GetAsync(x => x.Id > 0))
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
            </div>
            <div class="col-xl-1 text-end pt-1">
                <label>From</label>
            </div>
            <div class="col-xl-3">
                <input type="date" id="datepicker1"  class="form-control" />
            </div>
            <div class="col-xl-1 text-end pt-1">
                <label>To</label>
            </div>
            <div class="col-xl-3">
                <input type="date" id="datepicker2" class="form-control" />
            </div>
        </div>
    </section>

<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <main role="main" class="pb-3">
                        <br />
                        <table id="Numbers" class="table table-striped table-bordered dt-responsive nowrap table-responsive table-sm">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Wallet Number</th>
                                    <th>Uploaded Date</th>
                                    <th>Offer Id</th>
                                    <th>Status</th>
                                    <th>Response Message</th>
                                    @*<th>Transaction Date</th>*@
                                </tr>
                            </thead>
                        </table>
                    </main>
                </div>
            </div>
        </div>
    </div>
</section>

