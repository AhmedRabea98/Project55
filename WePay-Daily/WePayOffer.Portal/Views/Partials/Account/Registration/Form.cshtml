@model UserVM


<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">New User</h5>

                    <!-- Floating Labels Form -->
                    <form asp-controller="Account" asp-action="Registration" class="row g-3">

                        <input type="hidden" asp-for="Id" />

                        @*<input type="hidden" asp-for="Id" value="@Model.Id" />*@

                        <div class="col-md-12">
                            <div class="form-floating">
                                <input type="text" class="form-control" asp-for="UserName" placeholder="Your Name" autocomplete="off" autofocus>
                                <label asp-for="UserName">User Name</label>
                                <span asp-validation-for="UserName" class="text-danger font-weight-bold"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text" class="form-control" asp-for="FullName" placeholder="Full Name" autocomplete="off">
                                <label asp-for="FullName">Full Name</label>
                                <span asp-validation-for="FullName" class="text-danger font-weight-bold"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text" class="form-control" asp-for="Mobile" placeholder="Mobile" autocomplete="off">
                                <label asp-for="Mobile">Mobile</label>
                            </div>
                        </div>

                        <div class="text-center">
                            <input type="submit" id="save" value="Submit" class="btn btn-primary" />
                            <input type="reset" value="Reset" class="btn btn-secondary" />
                        </div>
                    </form><!-- End floating Labels Form -->

                </div>
            </div>
        </div>
    </div>
</section>



